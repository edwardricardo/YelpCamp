<% include ../partials/header %>

<h1 style="text-align:center;">Edit <%= campground.name %> Campground</h1>
<div style="width: 30%; margin: 25px auto;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group"><input class="form-control" type="text" name="name" value="<%= campground.name %>"></div>
        <div class="form-group"><textarea name="description" class="form-control" cols="5" rows="5"><%= campground.description %></textarea></div>
        <div class="form-group"><input class="form-control" type="text" name="image" value="<%= campground.image %>"></div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
        </div>
        <div class="form-group"><input class="form-control" type="number" name="price" value="<%= campground.price %>"></div>
        <div class="form-group"><input class=" btn btn-primary btn-lg btn-block" type="submit" value="Update"></div>        
    </form>
    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<% include ../partials/footer %>