<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center">Edit comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]" id="" cols="30" rows="5" placeholder="Comment..."><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
        
<% include ../partials/footer %>